<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.odb.sonarminefield"
    android:versionCode="6"
    android:versionName="1.3">

    <application
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:label="@string/app_name">

        <activity
            android:exported="true"
            android:name="br.odb.sonarminefield.ShowGameSplashActivity"
            android:label="@string/title_activity_show_game_splash"

            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.odb.sonarminefield.PlayGameActivity"
            android:label="@string/title_activity_play_game"

            android:screenOrientation="landscape"/>

        <activity
            android:name="br.odb.sonarminefield.ShowGameOutcomeActivity"
            android:label="@string/title_activity_show_game_outcome"
            android:screenOrientation="landscape"/>
    </application>

</manifest>