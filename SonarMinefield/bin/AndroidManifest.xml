<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.odb.sonarminefield"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/minesvg"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        
        >
        
        <activity
            android:name="br.odb.sonarminefield.ShowGameSplashActivity"
            android:label="@string/title_activity_show_game_splash" 
            
             android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.odb.sonarminefield.PlayGameActivity"
            android:label="@string/title_activity_play_game"  android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="br.odb.sonarminefield.ShowGameOutcomeActivity"
            android:label="@string/title_activity_show_game_outcome" android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>